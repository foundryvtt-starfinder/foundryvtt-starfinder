<div class="flexcol bio-properties">
    <div class="form-group singleFlex" data-tooltip="{{localize 'SFRPG.ActorSheet.Biography.ImageTooltip'}}">
        <label>Full body image</label>
    </div>
    <img class="avatar" src="{{system.details.biography.fullBodyImage}}" title="{{actor.name}}&#10;{{localize 'SFRPG.ActorSheet.Biography.ImageTooltip'}}" data-edit="system.details.biography.fullBodyImage" width="200" height="250" />

    {{#unless hideVitals}}
    <div class="form-group stacked doubleFlex" data-tooltip="<strong>{{localize 'SFRPG.ActorSheet.Biography.DateOfBirth'}}</strong><br>@details.biography.dateOfBirth">
        <label class="singleLine">{{localize "SFRPG.ActorSheet.Biography.DateOfBirth"}}</label>
        <input class="singleLine" type="text" name="system.details.biography.dateOfBirth" value="{{system.details.biography.dateOfBirth}}" data-dtype="String" placeholder="{{localize 'SFRPG.ActorSheet.Biography.DateOfBirthPlaceholder'}}" />
    </div>
    <div class="form-group singleFlex" data-tooltip="<strong>{{localize 'SFRPG.ActorSheet.Biography.Age'}}</strong><br>@details.biography.age">
        <label>{{localize "SFRPG.ActorSheet.Biography.Age"}}</label>
        <div class="form-fields">
            <input type="text" name="system.details.biography.age" value="{{system.details.biography.age}}" data-dtype="Number" placeholder="{{localize 'SFRPG.ActorSheet.Biography.AgePlaceholder'}}" />
        </div>
    </div>
    <div class="form-group stacked doubleFlex" data-tooltip="<strong>Gender/Pronouns</strong><br>@details.biography.genderPronouns">
        <label class="singleLine">{{localize 'SFRPG.ActorSheet.Biography.GenderPronouns'}}</label>
        <input class="singleLine" type="text" name="system.details.biography.genderPronouns" value="{{system.details.biography.genderPronouns}}" data-dtype="String" placeholder="{{localize 'SFRPG.ActorSheet.Biography.GenderPronounsPlaceholder'}}" />
    </div>
    <div class="form-group singleFlex" data-tooltip="<strong>{{localize 'SFRPG.ActorSheet.Biography.Height'}}</strong><br>@details.biography.height">
        <label>{{localize "SFRPG.ActorSheet.Biography.Height"}}</label>
        <div class="form-fields">
            <input type="text" name="system.details.biography.height" value="{{system.details.biography.height}}" data-dtype="String" placeholder="{{localize 'SFRPG.ActorSheet.Biography.HeightPlaceholder'}}" />
        </div>
    </div>
    <div class="form-group singleFlex" data-tooltip="<strong>{{localize 'SFRPG.ActorSheet.Biography.Weight'}}</strong><br>@details.biography.weight">
        <label>{{localize "SFRPG.ActorSheet.Biography.Weight"}}</label>
        <div class="form-fields">
            <input type="text" name="system.details.biography.weight" value="{{system.details.biography.weight}}" data-dtype="String" placeholder="{{localize 'SFRPG.ActorSheet.Biography.WeightPlaceholder'}}" />
        </div>
    </div>
    <div class="form-group singleFlex" data-tooltip="<strong>Home World</strong><br>@details.biography.homeWorld">
        <label>{{localize 'SFRPG.ActorSheet.Biography.HomeWorld'}}</label>
        <div class="form-fields">
            <input type="text" name="system.details.biography.homeWorld" value="{{system.details.biography.homeWorld}}" data-dtype="String" placeholder="{{localize 'SFRPG.ActorSheet.Biography.HomeWorldPlaceholder'}}" />
        </div>
    </div>
    <div class="form-group singleFlex" data-tooltip="<strong>Deity</strong><br>@details.biography.deity">
        <label>{{localize 'SFRPG.ActorSheet.Biography.Deity'}}</label>
        <div class="form-fields">
            <input type="text" name="system.details.biography.deity" value="{{system.details.biography.deity}}" data-dtype="String" placeholder="{{localize 'SFRPG.ActorSheet.Biography.DeityPlaceholder'}}" />
        </div>
    </div>
    {{/unless}}
    <div class="form-group singleFlex" data-tooltip="<strong>{{localize 'SFRPG.ActorSheet.Biography.OtherVisuals'}}</strong><br>@details.biography.otherVisuals">
        <label>{{localize "SFRPG.ActorSheet.Biography.OtherVisuals"}}</label>
    </div>

    <textarea name="system.details.biography.otherVisuals">{{system.details.biography.otherVisuals}}</textarea>
</div>

<div class="flexcol">
    <nav class="sheet-subnavigation biotabs" data-group="biographyTabs">
        <a class="item active{{#if system.details.biography.value}} highlight{{/if}}" data-tab="biography">{{localize "SFRPG.ActorSheet.Biography.TabBio"}}</a>
        {{#if isNPC}}
        <a class="item active{{#if system.details.ecology.value}} highlight{{/if}}" data-tab="ecology">{{localize "SFRPG.ActorSheet.Biography.TabEcology"}}</a>
        {{/if}}
        {{#if isGM}}
        <a class="item{{#if system.details.biography.gmNotes}} highlight{{/if}}" data-tab="gmNotes">{{localize "SFRPG.ActorSheet.Biography.TabGM"}} {{#if system.details.biography.gmNotes}} (!){{/if}}</a>
        {{/if}}
    </nav>

    <section class="bio-body">
        <div class="tab flexrow" data-group="biographyTabs" data-tab="biography">
            {{editor
                enrichedBiography
                target="system.details.biography.value"
                button=true
                editable=editable
                engine="prosemirror"
                collaborate="true"
            }}
        </div>
        <div class="tab" data-group="biographyTabs" data-tab="ecology">
            <div class="flexrow">
                <div class="flexcol">
                    <div class="form-group" data-tooltip="<strong>{{localize 'SFRPG.Environment'}}</strong><br/>@system.details.biography.environment">
                        <label>{{localize 'SFRPG.Environment'}}</label>
                        <div class="form-fields">
                            <input style="border-color: #191813;" type="text" name="system.details.environment" value="{{system.details.environment}}" placeholder="{{localize "SFRPG.Any"}}"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="flexrow">
                <div class="flexcol">
                    <div class="form-group" data-tooltip="<strong>{{localize 'SFRPG.Organization'}}</strong><br/>@system.details.biography.organization">
                        <label>{{localize 'SFRPG.Organization'}}</label>
                        <div class="form-fields">
                            <input style="border-color: #191813;" type="text" name="system.details.organization" value="{{system.details.organization}}" placeholder="{{localize "SFRPG.Any"}}"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="flexrow">
                <div class="flexcol">
                    <div class="form-group">
                        <label data-tooltip="{{ localize "SFRPG.NPCSheet.Biography.Organization.GroupSizeTooltip" }}">
                            {{ localize "SFRPG.NPCSheet.Biography.Organization.GroupSize" }}
                        </label>
                        <div class="form-fields">
                            <input style="border-color: #191813;" type="text" name="system.details.organizationSize.min" value="{{system.details.organizationSize.min}}" data-dtype="Number" />
                            <span class="sep"> - </span>
                            <input style="border-color: #191813;" type="text" name="system.details.organizationSize.max" value="{{system.details.organizationSize.max}}" data-dtype="Number" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{#if isGM}}
        <div class="tab flexrow" data-group="biographyTabs" data-tab="gmNotes">
            {{editor
                enrichedGMNotes
                target="system.details.biography.gmNotes"
                button=true
                editable=editable
                engine="prosemirror"
                collaborate="true"
            }}
        </div>
        {{/if}}
    </section>
</div>
