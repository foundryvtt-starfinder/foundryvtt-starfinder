<form class="{{cssClass}} flexcol" autocomplete="off">

    {{!-- Sheet Header --}}
    <header class="sheet-header flexrow">
        <img class="profile" src="{{document.texture.src}}" title="{{document.name}}" data-edit="img" />

        <div class="header-details flexrow">
            <div class="header-background flexrow">
                <h1 class="charname">
                    <input name="name" type="text" value="{{document.name}}" />
                </h1>
            </div>
        </div>
    </header>

    {{!-- Sheet Body --}}
    <section class="sheet-body tab">
        {{#if isGM}}
        <div class="inventory-filters">
            <label>{{localize "SFRPG.ItemCollectionSheet.Settings.Header"}}</label>
            <span data-tooltip="{{localize "SFRPG.ItemCollectionSheet.Settings.LockedTooltip"}}">
                <label class="checkbox">
                    <input id="toggle-locked" type="checkbox" name="itemCollection.locked" {{checked itemCollection.locked}} />{{localize "SFRPG.ItemCollectionSheet.Settings.Locked"}}
                </label>
            </span>
            <label>&nbsp;&nbsp;</label>
            <span data-tooltip="{{localize "SFRPG.ItemCollectionSheet.Settings.DeleteIfEmptyTooltip"}}">
                <label class="checkbox">
                    <input id="toggle-delete-if-empty" type="checkbox" name="itemCollection.deleteIfEmpty" {{checked itemCollection.deleteIfEmpty}} />{{localize "SFRPG.ItemCollectionSheet.Settings.DeleteIfEmpty"}}
                </label>
            </span>
        </div>
        {{/if}}

        <ol class="inventory-list">
            <li class="inventory-header flexrow">
                <h3 class="item-name noborder flexrow">Items</h3>

                <div class="item-detail item-weight">{{localize "SFRPG.InventoryBulk"}}</div>

                <div class="item-detail item-uses">{{localize "SFRPG.InventoryCapacity"}}</div>
                <div class="item-detail item-action">{{localize "SFRPG.InventoryUsage"}}</div>
                <div class="item-controls"></div>
            </li>

            <ol class="item-list">
            {{#each items as |item iid|}}
                {{> "systems/sfrpg/templates/actors/parts/actor-inventory-item.hbs" ../this bigItem=true item=item.item children=item.contents disableRolling=true disableEquipping=true}}
            {{/each}}
            </ol>
        </ol>
    </section>
</form>
