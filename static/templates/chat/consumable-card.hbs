<div class="sfrpg chat-card weapon-card" data-actor-id="{{actor.id}}" data-item-id="{{item._id}}" {{#if tokenId}}data-token-id="{{tokenId}}"{{/if}}>
    <header class="card-header flexrow">
        <img src="{{item.img}}" title="{{item.name}}" width="36" height="36"/>
        <h3 class="item-name noborder">{{item.name}}</h3>
    </header>

    <div class="card-content">{{{system.description.value}}}</div>

    <div class="card-buttons flexcol">
        {{#if system.hasCharges}}
        <button type="button" data-action="consume">{{localize "SFRPG.ChatCard.ItemActivation.Use"}} {{system.consumableType.str}}</button>
        {{else}}
        <button type="button" disabled>{{localize "SFRPG.ChatCard.ItemActivation.NoCharges"}}</button>
        {{/if}}
        {{#if hasSave}}<button type="button" class="chat-button-save" data-action="save" data-type="{{item.system.save.type}}" data-tooltip="{{item.labels.save}}"><i class="fas {{sfrpg "saveIconsShort" item.system.save.type}}"></i> {{localize "SFRPG.Save"}}</button>{{/if}}
        {{#if hasSkill}}<button type="button" class="chat-button-skill" data-action="skill" data-type="{{item.system.skillCheck.type}}" data-tooltip="{{item.labels.skillCheck}}"><i class="fas {{sfrpg "skillIconsShort" item.system.skillCheck.type}}"></i> {{localize "SFRPG.Skill"}}</button>{{/if}}
        {{#if hasArea}}<button type="button" class="chat-button-template" data-action="template" data-type="{{item.system.area.type}}" data-tooltip="{{localize "SFRPG.ChatCard.PlaceAbilityTemplate" label=item.labels.area}}"><i class="fas fa-crosshairs"></i> {{localize "SFRPG.Template"}}</button>{{/if}}
    </div>

    <footer class="card-footer">
        {{#each system.properties}}
        <span>{{this.name}}</span>
        {{/each}}
    </footer>
</div>
