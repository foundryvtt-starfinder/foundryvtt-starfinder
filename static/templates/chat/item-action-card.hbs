<div class="sfrpg chat-card item-action-card" data-actor-id="{{actor.id}}" data-item-id="{{item.id}}" {{#if tokenId}}data-token-id="{{tokenId}}"{{/if}} {{#if sceneId}}data-scene-id="{{sceneId}}"{{/if}}>
    <div class="card-item-details flexrow">
        <div class="card-icons owner">
            <img {{#if tokenImg}} src="{{tokenImg}}" {{else if actor.img}} src="{{tokenImg}}" {{else}} src="icons/svg/invisible.svg" {{/if}} class="actor-icon"
            {{#if tokenName}} data-tooltip="{{tokenName}}" {{else}} data-tooltip="{{actor.name}}" {{/if}} />
            <img {{#if item.img}}src="{{item.img}}"{{else}}src="icons/svg/cancel.svg"{{/if}} class="item-icon" data-tooltip="{{item.name}}"/>
        </div>
        <div class="card-info flexcol">
            <b class="card-title">{{item.name}}</b>
            <ul class="card-tags">
                {{#if item.labels.range }}<li>{{item.labels.range}}</li>{{/if}}
                {{#if hasCapacity }}<li>{{localize "SFRPG.Items.Ammunition.Ammo"}} : {{ammoLeft}}/{{item.system.capacity.max}}</li>{{/if}}
            </ul>
        </div>
        <div class="card-icons target">
            <img src="icons/svg/invisible.svg" class="actor-icon" data-tooltip="{{localize "SFRPG.Target.NoTargetSelected"}}"/>
        </div>
    </div>

    <div class="card-content">
        {{#if item.system.description.short}}
        {{{item.system.description.short}}}
        {{else}}
        {{{item.system.description.value}}}
        {{/if}}
    </div>

    <p class="card-buttons flexrow">
        {{log this}}
        {{#if hasAttack}}<button type="button" class="chat-button-attack flex1" data-action="attack"><i class="fas fa-gun"></i> {{ localize "SFRPG.Attack" }}</button>{{/if}}
        {{#if primaryDamageIsHealing}}<button type="button" class="chat-button-healing flex1" data-action="damage" data-tooltip="{{localize "SFRPG.Healing.Healing"}}"><i class="fas fa-square-plus"></i> {{localize "SFRPG.Healing.Healing"}}</button>
        {{else if hasDamage}}<button type="button" class="chat-button-damage flex1" data-action="damage" data-tooltip="{{localize "SFRPG.Damage.Damage"}}"><i class="fas fa-droplet"></i> {{localize "SFRPG.Damage.Damage"}}</button>{{/if}}
        {{#if hasSave}}<button type="button" class="chat-button-save" data-action="save" data-type="{{item.system.save.type}}" data-tooltip="{{item.labels.save}}"><i class="fas {{sfrpg "saveIconsShort" item.system.save.type}}"></i> {{localize "SFRPG.Save"}}</button>{{/if}}
        {{#if hasSkill}}<button type="button" class="chat-button-skill" data-action="skill" data-type="{{item.system.skillCheck.type}}" data-tooltip="{{item.labels.skillCheck}}"><i class="fas {{sfrpg "skillIconsShort" item.system.skillCheck.type}}"></i> {{localize "SFRPG.Skill"}}</button>{{/if}}
        {{#if hasArea}}<button type="button" class="chat-button-template" data-action="template" data-type="{{item.system.area.type}}" data-tooltip="{{localize "SFRPG.ChatCard.PlaceAbilityTemplate" label=item.labels.area}}"><i class="fas fa-crosshairs"></i> {{localize "SFRPG.Template"}}</button>{{/if}}
    </p>

    <footer class="card-footer">
        {{#each system.properties}}
        <span>{{this}}</span>
        {{/each}}
        {{#if cost}}
        <span>{{localize "SFRPG.ChatCard.ItemActivation.Cost" cost=cost}}</span>
        {{else if item.labels.activation}}
        <span>{{localize "SFRPG.ChatCard.ItemActivation.Cost" cost=item.labels.activation}}</span>
        {{else}}
        {{!-- No charge / activation cost --}}
        {{/if}}
        {{#if item.system.duration.value}}<span>{{{localize "SFRPG.ChatCard.ItemActivation.Duration" duration=item.system.duration.value}}}</span>{{/if}}
    </footer>
</div>
