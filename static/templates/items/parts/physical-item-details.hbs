<div class="bubble">
    <h3 class="bubble-header">{{ localize "SFRPG.ItemSheet.PhysicalProperties.Header" }}</h3>

    <div class="bubble-info">
        <div class="form-group">
            <label>{{ localize "SFRPG.ItemSheet.PhysicalProperties.ItemDescriptor" }}</label>
            <div class="form-fields">
                <label class="checkbox" data-tooltip="{{ localize "SFRPG.ItemSheet.PhysicalProperties.SturdyTooltip" }}">
                    <input type="checkbox" name="system.attributes.sturdy" {{checked itemData.attributes.sturdy}}/> {{ localize "SFRPG.ItemSheet.PhysicalProperties.Sturdy" }}
                </label>
                <label class="checkbox" data-tooltip="{{ localize "SFRPG.ItemSheet.PhysicalProperties.CustomBuiltTooltip" }}">
                    <input type="checkbox" name="system.attributes.customBuilt" {{checked itemData.attributes.customBuilt}}/> {{ localize "SFRPG.ItemSheet.PhysicalProperties.CustomBuilt" }}
                </label>
            </div>
        </div>

        <div class="form-group" data-tooltip="{{ localize "SFRPG.ItemSheet.PhysicalProperties.SizeTooltip" }}">
            <label>{{ localize "SFRPG.ItemSheet.PhysicalProperties.Size" }}</label>
            <div class="form-fields">
                <select class="actor-size" name="system.attributes.size">
                    {{selectOptions (sfrpg "actorSizes") selected=selectedSize}}
                </select>
            </div>
        </div>

        <div class="form-group" data-tooltip="{{ localize "SFRPG.ItemSheet.PhysicalProperties.DexterityModifierTooltip" }}">
            <label>{{ localize "SFRPG.ItemSheet.PhysicalProperties.DexterityModifier" }}</label>
            <div class="form-fields">
                <input type="text" name="system.attributes.dex.mod" value="{{itemData.attributes.dex.mod}}" data-dtype="String" placeholder="{{placeholders.dexterityModifier}}"/>
            </div>
        </div>

        {{#unless isPowerArmor}}
            {{#if itemData.equippable}}
                <div class="form-group" data-tooltip="{{ localize "SFRPG.ItemSheet.PhysicalProperties.EquippedBulkMultiplierTooltip" }}">
                    <label>{{ localize "SFRPG.ItemSheet.PhysicalProperties.EquippedBulkMultiplier" }}</label>
                    <div class="form-fields">
                        <input type="text" name="system.equippedBulkMultiplier" value="{{itemData.equippedBulkMultiplier}}" data-dtype="Number" placeholder="1"/>
                    </div>
                </div>
            {{/if}}
        {{/unless}}

        {{#if includeMaterials}}
            {{!-- Special Materials Template --}}
            {{> "systems/sfrpg/templates/items/parts/item-special-materials.hbs"}}
        {{/if}}
    </div>
</div>
