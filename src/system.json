    ],
    "esmodules": [
        "sfrpg.js"
    ],
    "styles": [
        "styles/tippy.css",
        "sfrpg.css"
    ],
    "packs": [
        {
            "name": "equipment",
            "label": "Equipment",
            "system": "sfrpg",
            "path": "./packs/equipment.db",
