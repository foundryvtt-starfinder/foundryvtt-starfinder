  "items": [
    {
      "_id": "W8ahlLq4yiLmlfGP",
      "name": "Unstable Engine (Ex)",
      "type": "vehicleSystem",
      "img": "systems/sfrpg/icons/default/gear-stick.svg",
      "system": {
