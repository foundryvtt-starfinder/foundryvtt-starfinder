      "_id": "FwSRjy91JtOUyJCP",
      "name": "Starquake (Su)",
      "type": "feat",
      "img": "systems/sfrpg/icons/classes/starquake.webp",
      "system": {
        "ability": "",
        "actionTarget": "",
        "actionType": "",
        "activation": {
