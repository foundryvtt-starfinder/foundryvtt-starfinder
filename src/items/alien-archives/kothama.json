    {
      "_id": "gUosGMknm8BqGdCr",
      "name": "Stealth Warp (Su)",
      "type": "feat",
      "img": "systems/sfrpg/icons/classes/stealth_warp.webp",
      "system": {
        "ability": "",
        "actionTarget": "",
        "actionType": "",
        "activation": {
          "type": "move",
          "condition": "",
          "cost": 1
