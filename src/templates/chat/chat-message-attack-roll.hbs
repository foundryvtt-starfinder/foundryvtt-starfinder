<div class="chat-card-custom-container chat-card" data-actor-id="{{actorId}}" data-item-id="{{item.id}}" data-token-id="{{tokenId}}">
    <div class="chat-card-custom">
        <div class="chard-card-custom-token">
            <img src="{{tokenImg}}" />
        </div>
        <div class="chat-card-custom-item">
            {{#if item.img }}<img src="{{item.img}}" />{{/if}}
            <p class="card-buttons damage">
                {{#if item.img }}<span>{{item.name}}</span>{{else}}<h2>{{flavor}}</h2>{{/if}}
                {{#if hasDamage }}<button type="button" data-action="damage">Damage</button>{{/if}}
                {{#if hasSave}}<button type="button" class="chat-button-save" data-action="save" data-type="{{item.system.save.type}}">{{item.labels.save}}</button>{{/if}}
                {{#if hasSkill}}<button type="button" class="chat-button-skill" data-action="skill" data-type="{{item.system.skillCheck.type}}">{{item.labels.skillCheck}}</button>{{/if}}

             </p>
        </div>
    </div>
    <div style="clear: both;"></div>
    <div class="chard-card-custom-details">
        <ul>
            {{#if item.labels.range }}<li>Range : {{item.labels.range}}</li>{{/if}}
            {{#if hasCapacity }}<li>Ammo : {{ammoLeft}}/{{item.system.capacity.max}}</li>{{/if}}
        </ul>
    </div>
</div>
{{{rollContent}}}
