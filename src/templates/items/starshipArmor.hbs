<form class="{{cssClass}} flexcol" autocomplete="off">

    {{!-- Item Sheet Header --}}
    {{> "systems/sfrpg/templates/items/parts/item-header.hbs"}}

    {{!-- Item Sheet Navigation --}}
    <nav class="sheet-navigation tabs" data-group="primary">
        <a class="item active" data-tab="description">{{ localize "SFRPG.Description" }}</a>
        <a class="item" data-tab="details">{{ localize "SFRPG.Details" }}</a>
    </nav>

    {{!-- Item Sheet Body --}}
    <section class="sheet-body">

        {{!-- Description Tab --}}
        {{> "systems/sfrpg/templates/items/parts/item-description.hbs"}}

        {{!-- Details Tab --}}
        <div class="tab details" data-group="primary" data-tab="details">

            {{!-- Common component data --}}
            {{> "systems/sfrpg/templates/items/parts/starship-component.hbs" this noPCUCost=true}}

            {{!-- Special Materials Template --}}
            {{> "systems/sfrpg/templates/items/parts/item-special-materials.hbs"}}

            <h4 class="section-header first">{{ localize "SFRPG.ItemSheet.StarshipArmor.Header" }}</h4>

            <div class="form-group" data-tippy-content="<b>{{ localize "SFRPG.ItemSheet.StarshipArmor.ArmorBonus" }}</b><br/>{{ localize "SFRPG.ItemSheet.StarshipArmor.ArmorBonusTooltip" }}">
                <label>{{ localize "SFRPG.ItemSheet.StarshipArmor.ArmorBonus" }}</label>
                <div class="form-fields">
                    <input type="text" name="system.armorBonus" value="{{itemData.armorBonus}}" data-dtype="Number" placeholder="0" />
                </div>
            </div>

            <div class="form-group" data-tippy-content="<b>{{ localize "SFRPG.ItemSheet.StarshipArmor.TargetLockPenalty" }}</b><br/>{{ localize "SFRPG.ItemSheet.StarshipArmor.TargetLockPenaltyTooltip" }}">
                <label>{{ localize "SFRPG.ItemSheet.StarshipArmor.TargetLockPenalty" }}</label>
                <div class="form-fields">
                    <input type="text" name="system.targetLockPenalty" value="{{itemData.targetLockPenalty}}" data-dtype="Number" placeholder="0" />
                </div>
            </div>

            <div class="form-group" data-tippy-content="<b>{{ localize "SFRPG.ItemSheet.StarshipArmor.TurnDistancePenalty" }}</b><br/>{{ localize "SFRPG.ItemSheet.StarshipArmor.TurnDistancePenaltyTooltip" }}">
                <label>{{ localize "SFRPG.ItemSheet.StarshipArmor.TurnDistancePenalty" }}</label>
                <div class="form-fields">
                    <input type="text" name="system.turnDistancePenalty" value="{{itemData.turnDistancePenalty}}" data-dtype="Number" placeholder="0" />
                </div>
            </div>

        </div>

    </section>
</form>