<form class="{{cssClass}} flexcol" autocomplete="off">

    {{!-- Item Sheet Header --}}
    {{> "systems/sfrpg/templates/items/parts/item-header.hbs"}}

    {{!-- Item Sheet Navigation --}}
    <nav class="sheet-navigation tabs" data-group="primary">
        <a class="item active" data-tab="description">{{ localize "SFRPG.Description" }}</a>
        <a class="item" data-tab="details">{{ localize "SFRPG.Details" }}</a>
    </nav>

    {{!-- Item Sheet Body --}}
    <section class="sheet-body">

        {{!-- Description Tab --}}
        {{> "systems/sfrpg/templates/items/parts/item-description.hbs"}}

        {{!-- Details Tab --}}
        <div class="tab details" data-group="primary" data-tab="details">

            {{!-- Common Component Data --}}
            {{> "systems/sfrpg/templates/items/parts/starship-component.hbs"}}

            <div class="bubble">
                <h3 class="bubble-header">{{ localize "SFRPG.ItemSheet.StarshipComputer.Header" }}</h3>

                <div class="bubble-info">
                    
                    {{!-- Computer Modifier --}}
                    <div class="form-group" data-tooltip="<b>{{ localize "SFRPG.ItemSheet.StarshipComputer.Modifier" }}</b><br/>{{ localize "SFRPG.ItemSheet.StarshipComputer.ModifierTooltip" }}">
                        <label>{{ localize "SFRPG.ItemSheet.StarshipComputer.Modifier" }}</label>
                        <div class="form-fields">
                            <input type="text" name="system.modifier" value="{{itemData.modifier}}" data-dtype="Number" />
                        </div>
                    </div>

                    {{!-- Nodes --}}
                    <div class="form-group" data-tooltip="<b>{{ localize "SFRPG.ItemSheet.StarshipComputer.Nodes" }}</b><br/>{{ localize "SFRPG.ItemSheet.StarshipComputer.NodesTooltip" }}">
                        <label>{{ localize "SFRPG.ItemSheet.StarshipComputer.Nodes" }}</label>
                        <div class="form-fields">
                            <input type="text" name="system.nodes" value="{{itemData.nodes}}" data-dtype="Number" />
                        </div>
                    </div>
                    
                </div>
            </div>
            
        </div>

    </section>
</form>