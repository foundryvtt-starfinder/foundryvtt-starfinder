<form class="{{cssClass}} flexcol" autocomplete="off">

    {{!-- Item Sheet Header --}}
    {{> "systems/sfrpg/templates/items/parts/item-header.hbs"}}

    {{!-- Item Sheet Navigation --}}
    <nav class="sheet-navigation tabs" data-group="primary">
        <a class="item active" data-tab="description">{{ localize "SFRPG.Description" }}</a>
        <a class="item" data-tab="details">{{ localize "SFRPG.Details" }}</a>
    </nav>

    {{!-- Item Sheet Body --}}
    <section class="sheet-body">

        {{!-- Description Tab --}}
        {{> "systems/sfrpg/templates/items/parts/item-description.hbs"}}

        {{!-- Details Tab --}}
        <div class="tab details" data-group="primary" data-tab="details">

            {{!-- Common component data --}}
            {{> "systems/sfrpg/templates/items/parts/starship-component.hbs" this noPCUCost=true}}

            <h4 class="section-header first">{{ localize "SFRPG.ItemSheet.StarshipAblativeArmor.Header" }}</h4>

            <div class="form-group" data-tooltip="<b>{{ localize "SFRPG.ItemSheet.StarshipAblativeArmor.AblativeValue" }}</b><br/>{{ localize "SFRPG.ItemSheet.StarshipAblativeArmor.AblativeValueTooltip" }}">
                <label>{{ localize "SFRPG.ItemSheet.StarshipAblativeArmor.AblativeValue" }}</label>
                <div class="form-fields">
                    <input type="text" name="system.ablativeValue" value="{{itemData.ablativeValue}}" data-dtype="Number" placeholder="0" />
                </div>
            </div>

            <div class="form-group" data-tooltip="<b>{{ localize "SFRPG.ItemSheet.StarshipAblativeArmor.TargetLockPenalty" }}</b><br/>{{ localize "SFRPG.ItemSheet.StarshipAblativeArmor.TargetLockPenaltyTooltip" }}">
                <label>{{ localize "SFRPG.ItemSheet.StarshipAblativeArmor.TargetLockPenalty" }}</label>
                <div class="form-fields">
                    <input type="text" name="system.targetLockPenalty" value="{{itemData.targetLockPenalty}}" data-dtype="Number" placeholder="0" />
                </div>
            </div>

            <div class="form-group" data-tooltip="<b>{{ localize "SFRPG.ItemSheet.StarshipAblativeArmor.TurnDistancePenalty" }}</b><br/>{{ localize "SFRPG.ItemSheet.StarshipAblativeArmor.TurnDistancePenaltyTooltip" }}">
                <label>{{ localize "SFRPG.ItemSheet.StarshipAblativeArmor.TurnDistancePenalty" }}</label>
                <div class="form-fields">
                    <input type="text" name="system.turnDistancePenalty" value="{{itemData.turnDistancePenalty}}" data-dtype="Number" placeholder="0" />
                </div>
            </div>

        </div>

    </section>
</form>