<form class="{{cssClass}} flexcol" autocomplete="off">

    {{!-- Item Sheet Header --}}
    {{> "systems/sfrpg/templates/items/parts/item-header.hbs"}}

    {{!-- Item Sheet Navigation --}}
    <nav class="sheet-navigation tabs" data-group="primary">
        <a class="item active" data-tab="description">{{ localize "SFRPG.Description" }}</a>
        <a class="item" data-tab="details">{{ localize "SFRPG.Details" }}</a>
        <a class="item" data-tab="modifiers">{{ localize "SFRPG.Modifiers" }}</a>
    </nav>

    {{!-- Item Sheet Body --}}
    <section class="sheet-body">
        {{> "systems/sfrpg/templates/items/parts/item-description.hbs"}}

        {{!-- Details Tab --}}
        <div class="tab details" data-tab="details" data-group="primary">

            {{!-- Details Tab Navigation --}}
            <nav class="sheet-subnavigation subtabs" data-group="subdetails">
                <a class="item highlight active" data-tab="properties">{{ localize "SFRPG.ItemSheet.Details.Tab.Properties" }}</a>
                <a class="item" data-tab="container">{{ localize "SFRPG.ItemSheet.Details.Tab.AmmunitionContainer" }}</a>
            </nav>

            {{!-- Details Section --}}
            <section class="sheet-details">

                {{!-- Properties Tab --}}
                <div class="tab properties" data-group="subdetails" data-tab="properties">
                    
                    <div class="bubble">
                        <h3 class="bubble-header">{{ localize "SFRPG.Items.Magic.Details" }}</h3>

                        <div class="bubble-info">
                            <div class="form-group">
                                <label>{{ localize "SFRPG.Items.Magic.LimitedWear" }}</label>
                                <label class="checkbox">
                                <input type="checkbox" name="system.limitedWear" {{checked itemData.limitedWear}}/>{{ localize "SFRPG.Items.Magic.LimitedWearCheckbox" }}
                            </label>
                            </div>

                            {{#if (and (and itemData.limitedWear actor) (eq actor.type "character"))}}
                                {{#if (gt actor.system.magicalItems.worn actor.system.magicalItems.max)}}
                                <div class="form-group">
                                    <label></label>
                                    <span class="error"  style="text-align: right;">{{localize "SFRPG.Items.Magic.LimitedWearExceeded"}}</span>
                                </div>
                                {{/if}}
                            {{/if}}
                            
                            {{!-- Equipment Status --}}
                            {{> "systems/sfrpg/templates/items/parts/item-status.hbs"}}

                        </div>
                    </div>

                    {{!-- Physical Item Details --}}
                    {{> "systems/sfrpg/templates/items/parts/physical-item-details.hbs"}}

                </div>

                {{!-- Container Tab --}}
                <div class="tab container" data-group="subdetails" data-tab="container">

                    {{!-- Capacity --}}
                    {{> "systems/sfrpg/templates/items/parts/item-capacity.hbs"}}

                    {{!-- Container Template --}}
                    {{> "systems/sfrpg/templates/items/parts/container-details.hbs" message="SFRPG.Items.Equipment.ContainerTooltip"}}

                </div>
            
            </section>
            
        </div>

        {{!-- Modifiers Tab --}}
        {{> "systems/sfrpg/templates/items/parts/item-modifiers.hbs"}}

    </section>
</form>
