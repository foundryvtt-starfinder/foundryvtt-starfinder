<form class="{{cssClass}} flexcol" autocomplete="off">

    {{!-- Item Sheet Header --}}
    {{> "systems/sfrpg/templates/items/parts/item-header.hbs"}}

    {{!-- Item Sheet Navigation --}}
    <nav class="sheet-navigation tabs" data-group="primary">
        <a class="item active" data-tab="description">{{ localize "SFRPG.Description" }}</a>
        <a class="item" data-tab="details">{{ localize "SFRPG.Details" }}</a>
        <a class="item" data-tab="modifiers">{{ localize "SFRPG.Modifiers" }}</a>
    </nav>

    {{!-- Item Sheet Body --}}
    <section class="sheet-body">

        {{!-- Description Tab --}}
        {{> "systems/sfrpg/templates/items/parts/item-description.hbs"}}

        {{!-- Details Tab --}}
        <div class="tab details" data-group="primary" data-tab="details">
            <h3 class="form-header noborder">{{ localize "SFRPG.Items.Shield.Details" }}</h3>

            {{!-- Equipment Status --}}
            {{> "systems/sfrpg/templates/items/parts/item-status.hbs"}}

            {{!-- Weapon Properties --}}
            <div class="form-group stacked weapon-properties">
                <label>
                    {{ localize "SFRPG.Items.Weapon.Properties" }}&nbsp;
                    <a class="trait-selector"
                        data-tooltips="weaponPropertiesTooltips"
                        data-choices="weaponProperties"
                        data-format="itemProperties"
                        data-location="system.properties"
                        data-title="{{localize "SFRPG.Items.Weapon.Properties"}}">
                        <i class="fas fa-edit"></i>
                    </a>
                </label>
                
                <ul class="traits-list">
                    {{#each itemData.properties as |property name|}}
                        {{#if property.value}}
                            <li class="tag {{name}}" data-tooltip='<strong>{{lookup ../config.weaponProperties name}}</strong><br/>{{lookup ../config.weaponPropertiesTooltips name}}'>
                                {{lookup ../config.weaponProperties name}}
                            </li>
                        {{/if}}
                    {{/each}}
                </ul>
            </div>

            {{!-- Special Materials Template --}}
            {{> "systems/sfrpg/templates/items/parts/item-special-materials.hbs"}}

            <br />

            {{!-- Shield Bonus --}}
            <div class="form-group">
                <label>{{ localize "SFRPG.Items.Shield.Bonus" }}</label>
                <div class="form-fields">
                    <span class="sep">{{ localize "SFRPG.Items.Shield.Wielded" }} </span>
                    <input type="text" name="system.bonus.wielded" value="{{itemData.bonus.wielded}}" data-dtype="Number"/>
                    <span class="sep"> / </span>
                    <span class="sep">{{ localize "SFRPG.Items.Shield.Aligned" }} </span>
                    <input type="text" name="system.bonus.aligned" value="{{itemData.bonus.aligned}}" data-dtype="Number"/>
                </div>
            </div>

            {{!-- Dexterity Modifier --}}
            <div class="form-group">
                <label>{{ localize "SFRPG.Items.MaxDex" }}</label>
                <div class="form-fields">
                   <input type="text" name="system.dex" value="{{itemData.dex}}" data-dtype="Number" placeholder="{{ localize "SFRPG.Items.Unlimited" }}"/>
                </div>
            </div>

            {{!-- Armor Check Penalty --}}
            <div class="form-group">
                <label>{{ localize "SFRPG.Items.ACP" }}</label>
                <div class="form-fields">
                    <input type="text" name="system.acp" value="{{itemData.acp}}" data-dtype="Number" placeholder="0" />
                </div>
            </div>

            <h3 class="form-header noborder">{{ localize "SFRPG.Items.EquipmentUsage" }}</h3>

            {{!-- Item Activation Template --}}
            {{> "systems/sfrpg/templates/items/parts/item-activation.hbs"}}

            <h3 class="form-header noborder">{{ localize "SFRPG.Items.Shield.Action" }}</h3>

            {{!-- Item Action Template --}}
            {{> "systems/sfrpg/templates/items/parts/item-action.hbs"}}

            <br />

            {{> "systems/sfrpg/templates/items/parts/physical-item-details.hbs"}}

            <br />

            {{> "systems/sfrpg/templates/items/parts/container-details.hbs" message="SFRPG.Items.Equipment.ContainerTooltip"}}

        </div>

        {{!-- Modifiers Tab --}}
        {{> "systems/sfrpg/templates/items/parts/item-modifiers.hbs"}}

    </section>
</form>
