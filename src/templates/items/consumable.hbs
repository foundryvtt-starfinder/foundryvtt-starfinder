<form class="{{cssClass}} flexcol" autocomplete="off">

    {{!-- Item Sheet Header --}}
    {{> "systems/sfrpg/templates/items/parts/item-header.hbs"}}

    {{!-- Item Sheet Navigation --}}
    <nav class="sheet-navigation tabs" data-group="primary">
        <a class="item active" data-tab="description">{{ localize "SFRPG.Description" }}</a>
        <a class="item" data-tab="details">{{ localize "SFRPG.Details" }}</a>
        <a class="item" data-tab="modifiers">{{ localize "SFRPG.Modifiers" }}</a>
    </nav>

    {{!-- Item Sheet Body --}}
    <section class="sheet-body">

        {{!-- Description Tab --}}
        {{> "systems/sfrpg/templates/items/parts/item-description.hbs"}}

        {{!-- Details Tab --}}
        <div class="tab details" data-group="primary" data-tab="details">
            <h3 class="form-header noborder">Consumable Details</h3>

            {{!-- Consumable Type --}}
            <div class="form-group">
                <label>{{ localize "SFRPG.Items.Consumable.Type" }}</label>
                <select name="system.consumableType">
                    {{#select itemData.consumableType}}
                    {{#each config.consumableTypes as |name type|}}
                    <option value="{{type}}">{{name}}</option>
                    {{/each}}
                    {{/select}}
                </select>
            </div>

            <br />

            <h3 class="form-header noborder">{{ localize "SFRPG.Items.Consumable.Usage" }}</h3>

            {{!-- Item Activation Template --}}
            {{> "systems/sfrpg/templates/items/parts/item-activation.hbs"}}

            {{!-- Consumable Usage --}}
            {{#if itemData.activation.type}}
            <div class="form-group">
                <label>{{ localize "SFRPG.Items.Consumable.Usage" }}</label>
                <label class="checkbox">
                    <input type="checkbox" name="system.uses.autoUse" {{checked itemData.uses.autoUse}}/> {{ localize "SFRPG.Items.Consumable.OnUse" }}
                </label>
                <label class="checkbox">
                    <input type="checkbox" name="system.uses.autoDestroy" {{checked itemData.uses.autoDestroy}}/> {{ localize "SFRPG.Items.Consumable.DestroyWhenEmpty" }}
                </label>
            </div>
            {{/if}}

            <br />

            <h3 class="form-header noborder">{{ localize "SFRPG.Items.Consumable.Action" }}</h3>

            {{!-- Item Action Template --}}
            {{> "systems/sfrpg/templates/items/parts/item-action.hbs"}}

            <br />

            <h3 class="form-header noborder">{{ localize "SFRPG.ItemSheet.PhysicalProperties.Header" }}</h3>
            {{> "systems/sfrpg/templates/items/parts/physical-item-details.hbs"}}
        </div>

        {{!-- Modifiers Tab --}}
        {{> "systems/sfrpg/templates/items/parts/item-modifiers.hbs"}}
        
    </section>
</form>
