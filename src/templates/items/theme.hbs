<form class="{{cssClass}} flexcol" autocomplete="off">

    {{!-- Item Sheet Header --}}
    <header class="sheet-header flexrow">
        <img class="profile" src="{{item.img}}" title="{{item.name}}" data-edit="img" />

        <div class="header-details flexrow">
            <h1 class="charname">
                <input name="name" type="text" value="{{item.name}}" placeholder="Item Name" />
            </h1>

            <div class="item-subtitle">
                <h4 class="item-type">{{itemType}}</h4>
                <span class="item-status">{{itemStatus}}</span>
            </div>

            <ul class="summary">
                <li>
                    <input type="text" name="system.source" value="{{itemData.source}}" placeholder="Source" />
                </li>
            </ul>
        </div>
    </header>

    {{!-- Item Sheet Navigation --}}
    <nav class="sheet-navigation tabs" data-group="primary">
        <a class="item active" data-tab="description">{{ localize "SFRPG.Description" }}</a>
        <a class="item" data-tab="details">{{ localize "SFRPG.Details" }}</a>
        <a class="item" data-tab="modifiers">{{ localize "SFRPG.Modifiers" }}</a>
    </nav>

    {{!-- Item Sheet Body --}}
    <section class="sheet-body">
        {{!-- Description Tab --}}
        {{> "systems/sfrpg/templates/items/parts/item-description.hbs" hideProperties=true}}

        {{!-- Details Tab --}}
        <div class="tab details" data-group="primary" data-tab="details">

            <div class="bubble">
                <h3 class="bubble-header">{{ localize "SFRPG.Items.Theme.Details" }}</h3>

                <div class="bubble-info">
                    <div class="form-group">
                        <label>{{ localize "SFRPG.Items.Theme.AbilityAdjustment" }}</label>
                        <div class="form-fields">
                            <select name="system.abilityMod.ability">
                                {{#select itemData.abilityMod.ability}}
                                {{#each config.abilities as |ability key|}}
                                <option value="{{key}}">{{ability}}</option>
                                {{/each}}
                                {{/select}}
                            </select>
                            <input type="text" name="system.abilityMod.mod" value="{{itemData.abilityMod.mod}}" data-dtype="Number" />                    
                        </div>
                    </div>

                    <div class="form-group">
                        <label>{{ localize "SFRPG.Items.Theme.Skill" }}</label>
                        <select name="system.skill">
                            {{#select itemData.skill}}
                            {{#each config.skills as |skill skl|}}
                            <option value="{{skl}}">{{skill}}</option>
                            {{/each}}
                            {{/select}}
                        </select>
                    </div>
                </div>
            </div>

        </div>

        {{!-- Modifiers Tab --}}
        {{> "systems/sfrpg/templates/items/parts/item-modifiers.hbs"}}
    </section>
</form>