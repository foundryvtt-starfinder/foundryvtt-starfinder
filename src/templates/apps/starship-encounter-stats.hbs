<div class="encounter-stats-sheet">
    <div class="stats-header">
        <table>
            <tr>
                <td class="table-left">
                    {{localize "SFRPG.Combat.Difficulty.Tooltip.PlayerShipEffectiveTier"}}
                </td>
                <td class="table-right">
                    {{difficultyData.playerTier.string}}
                </td>
            </tr>
            <tr>
                <td class="table-left">
                    {{localize "SFRPG.Combat.Difficulty.Tooltip.EnemyShipEffectiveTier"}}
                </td>
                <td class="table-right">
                    {{difficultyData.enemyTier.string}}
                </td>
            </tr>
            <tr>
                <td class="table-left">
                    {{localize "SFRPG.Combat.Difficulty.Tooltip.EncounterTotalXP"}}
                </td>
                <td class="table-right" style="width: 50%;">
                    {{i18nNumberFormat difficultyData.XPValue}} {{localize "SFRPG.Combat.Difficulty.Units.XP"}}
                </td>
            </tr>
            <tr>
                <td class="table-left">
                    {{localize "SFRPG.Combat.Difficulty.Tooltip.EncounterWealth"}}
                </td>
                <td class="table-right">
                    {{i18nNumberFormat difficultyData.wealth}}  {{localize "SFRPG.Combat.Difficulty.Units.Credits"}}
                </td>
            </tr>
        </table>
    </div>

    <div class="combatants-title">
        <div class="title-item">
            {{localize "SFRPG.Combat.Difficulty.Tooltip.Players"}}
        </div>
        <div class="title-item">
            {{localize "SFRPG.Combat.Difficulty.Tooltip.Enemies"}}
        </div>
    </div>

    <div class="stats-body">
        <div class="body-col">
            <ul class="combatant-list">
                {{#each difficultyData.playerShips as |combatant id|}}
                    <li class="combatant-list ally" data-combatant-id="{{combatant.id}}">
                        <img class="img" src="{{combatant.img}}" title="{{combatant.name}}" width="48" height="48" />
                        <div class="combatant-info">
                            <h4>
                                {{combatant.name}}
                            </h4>
                            <label class="combatant-level">{{localize "SFRPG.ShipTierLabel"}}
                                {{crDecimalToFraction combatant.actor.system.details.tier}}</label>
                        </div>
                    </li>
                {{/each}}
            </ul>
        </div>
        <div class="body-col">
            <ul class="combatant-list">
                {{#each difficultyData.enemyShips as |combatant id|}}
                    <li class="combatant-list enemy" data-combatant-id="{{combatant.id}}">
                        <img class="img" src="{{combatant.img}}" title="{{combatant.name}}" width="48" height="48" />
                        <div class="combatant-info">
                            <h4>
                                {{combatant.name}}
                            </h4>
                            <label class="combatant-level">{{localize "SFRPG.ShipTierLabel"}}
                                {{crDecimalToFraction combatant.actor.system.details.tier}}</label>
                        </div>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>
</div>
