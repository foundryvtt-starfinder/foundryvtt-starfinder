<div id="counter-management-position">
<h2>{{localize "SFRPG.CounterClassesManagementTitle"}} {{labelClasses}}</h2>
    {{#if (eq classes "solarianAttunement")}}
    <ul class="counter-management-position counter-management-position-solarian">
        <li>
            <div>
                <h3 class="noborder">{{localize "SFRPG.CounterClassesSolarianGraviton"}}</h3>
                <img data-actor-id="{{actorId}}" data-management-position="graviton" src="systems/sfrpg/icons/classes/graviton.webp" >
            </div>
        </li>
        <li>
            <div>
                <h3 class="noborder">{{localize "SFRPG.CounterClassesSolarianPhoton"}}</h3>
                <img data-actor-id="{{actorId}}" data-management-position="photon" src="systems/sfrpg/icons/classes/photon.webp" >
            </div>
        </li>
        <li>
            <div>
                <h3 class="noborder">{{localize "SFRPG.CounterClassesSolarianUnaligned"}}</h3>
                <img data-actor-id="{{actorId}}" data-management-position="solarianAttunement" src="systems/sfrpg/icons/classes/solarianAttunement.webp" >
            </div>
        </li>

    </ul>
    {{else}}
    <ul class="counter-management-position">
        <li>
            <div>
                <h3 class="noborder">{{labelClasses}}</h3>
                <img src="systems/sfrpg/icons/classes/{{classes}}.webp" >
            </div>
        </li>
    </ul>
    {{/if}}
    <div class="counter-management-info">
        <label>{{localize "SFRPG.CounterClassesCurrentPositionLabel"}}</label><input class="counter-management-position-input" value="{{currentPosition}}" name="position" readonly><br />
        <label>{{localize "SFRPG.CounterClassesCurrentCount"}}</label><input class="counter-management-counter-input" value="{{counter}}" name="count" readonly>
    </div>
    <hr>
    <div class="counter-management-button">
        <button type="button" data-actor-id="{{actorId}}" data-management-classes="{{classes}}" data-management-position="{{currentPosition}}" name="counter-management-button-add">{{localize "SFRPG.CounterClassesAddButton"}}</button>/<button type="button" data-management-classes="{{classes}}" data-actor-id="{{actorId}}" data-management-position="{{currentPosition}}" name="counter-management-button-remove">{{localize "SFRPG.CounterClassesRemoveButton"}}</button>
    </div>
</div>